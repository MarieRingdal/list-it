<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:clickable="true"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    android:focusable="true"
    app:cardBackgroundColor="?attr/colorOnPrimary"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/listCardView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/listTitle"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="16dp"
            android:fontFamily="sans-serif-black"
            android:textSize="17sp"
            android:text="@string/app_name"
            android:textColor="?attr/colorOnSecondary"/>

        <ProgressBar
            android:id="@+id/listProgressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="300dp"
            android:layout_height="12dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="25dp"
            android:max="100"
            android:progressBackgroundTint="?attr/colorSecondaryVariant"
            android:progressDrawable="@drawable/list_item_progress_bar"/>

        <ImageButton
            android:id="@+id/deleteListButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="15dp"
            android:layout_toEndOf="@+id/listProgressBar"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_delete" />

        <ImageButton
            android:id="@+id/favoriteListButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd ="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_toEndOf="@id/listProgressBar"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_favorite_false"/>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>